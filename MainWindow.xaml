<Window x:Class="Windify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windify"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Windify" Height="452" Width="282"
        ThemeMode="System">
    <Window.Resources>
        <Style x:Key="ActiveAccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />
        </Style>
        <Style x:Key="InactiveAccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>
    </Window.Resources>

    <Grid Margin="10" RenderTransformOrigin="0.508,0.696">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10" d:IsLocked="True">
            <DockPanel>
                <Button FontFamily="{StaticResource SymbolThemeFontFamily}" Width="auto" Content="&#xE72C;" Name="AboutButton" Click="Refresh_Click">
                </Button>

                <TextBox x:Name="SearchBox"
                         Margin="5,0"
                         VerticalAlignment="Center"
                         Height="30"
                         TextChanged="SearchBox_TextChanged"
                         GotFocus="SearchBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"
                         PreviewKeyDown="SearchBox_PreviewKeyDown"/>
            </DockPanel>

            <Popup x:Name="SuggestionsPopup"
                   PlacementTarget="{Binding ElementName=SearchBox}"
                   Placement="Right"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   IsOpen="False"
                   PopupAnimation="Fade">
                <ListBox x:Name="SuggestionsListBox"
                             SelectionChanged="SuggestionsListBox_SelectionChanged"
                             MaxHeight="150"
                             Width="{Binding ActualWidth, ElementName=SearchBox}"/>
            </Popup>
        </StackPanel>
        <!-- Slider de Transparencia -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10" d:IsLocked="True">
            <TextBlock Text="Transparency" FontFamily="Segoe UI" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,5"
                       ToolTipService.InitialShowDelay="100"          
	                   ToolTipService.Placement="MousePoint"         
	                   ToolTipService.ToolTip="Se refiere a la opacidad o transparencia de la ventana. Se ajusta con el slider "/>
            <Slider x:Name="TransparencySlider" Minimum="0" Maximum="100" Value="100" ValueChanged="TransparencySlider_ValueChanged"/>
        </StackPanel>
        <!-- Top on view -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10" d:IsLocked="True">
            <TextBlock Text="Top on view" FontFamily="Segoe UI" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,5"
            ToolTipService.InitialShowDelay="100"          
	        ToolTipService.Placement="MousePoint"         
	        ToolTipService.ToolTip="Top on View se refiere a la opcion de bloquear una ventana en primer plano o no. Se ajusta con On y Off"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="TopOnButton" Content="Yes" Width="100" Margin="5" Click="TopOnView_On_Click" />
                <Button x:Name="TopOffButton" Content="No" Width="100" Margin="5" Click="TopOnView_Off_Click" />
            </StackPanel>
        </StackPanel>
        <!--Info de la Aplicacion Seleccionada-->
        <TextBlock Grid.Row="3" Text="Selected App" FontFamily="Segoe UI" HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,5" d:IsLocked="True"/>
        <Image HorizontalAlignment="Center" Source="{Binding SelectedApp.Icon}" Width="auto" Height="auto" Margin="99,10,99,148" Grid.Row="4" d:IsLocked="True"/>
    </Grid>
</Window>